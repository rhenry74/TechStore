@{
    BSInput<string> bs_input = new BSInput<string>();
}

<BSLabel>@Name</BSLabel>
    <bs_input InputType="InputType.TextArea" Value="@Value" DisplayName="@Name" IsReadonly="@ReadOnly" OnValueChange="OnInputChange" />


    @code {
    [Parameter] public string Name { get; set; }
    [Parameter] public string Value { get; set; }
    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public string Placeholder { get; set; }
    [Parameter] public EventCallback<string> ValueChanged { get; set; }

    private Task OnInputChange(ChangeEventArgs e)
    {
        Value = e.Value.ToString();

        return ValueChanged.InvokeAsync(Value);
    }
}
